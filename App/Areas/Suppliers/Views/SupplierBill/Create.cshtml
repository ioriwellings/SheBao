@model Langben.DAL.SupplierBill

@{
    Layout = "~/Views/Shared/CRMCreate.cshtml";
}
@using Common
@using Models

@section CurentPlace {
    创建
}
@using (Html.BeginForm("", "../api/SupplierBillApi/Post"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="创建" />
            <input class="a2 f2" type="button" onclick="CloseDialog()" value="关闭" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.SupplierId)

            <div class="editor-label">
                <span style="color: red; float:none">*</span>@*开票名称*@@Html.LabelFor(model => model.BillName)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BillName)
                @Html.ValidationMessageFor(model => model.BillName)
            </div>
            <div class="editor-label">
                <span style="color: red; float:none">*</span>@*税务登记证号*@@Html.LabelFor(model => model.TaxRegistryNumber)：
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TaxRegistryNumber)
                @Html.ValidationMessageFor(model => model.TaxRegistryNumber)
            </div>
        </div>
    </fieldset>
}

<script type="text/javascript">
    $(function () {
        $("#SupplierId").val(@ViewBag.SupplierID);
    });
</script>

