@{ Layout = "~/Views/Shared/CRMIndex.cshtml"; }
@using Common
@using Models

<script src="~/Scripts/JScriptIndex.js"></script>


<script type="text/javascript" language="javascript">
    $(function () {

        // 获取内容并显示
        $.ajax({
            url: "/api/CRM_CompanyFinance_Bill_AuditApi/Get/@ViewBag.ID",
            type: "Get",
            async: false,
            success: function (res) {
                $("#Audit_BillName").text(res.BillName);
                $("#Audit_TaxRegistryNumber").text(res.TaxRegistryNumber);
            }
        })

        $('#BasicGrid').datagrid()

    });
    function PassAdd() {
        $.ajax({
            url: "/api/CRM_CompanyFinance_Bill_AuditApi/PassAdd/@ViewBag.ID",
            type: "Post",
            //async: false,
            success: function (data) {
                $.messager.alert('操作提示', data.Message, 'info', function () {
                    if (data.Code == 1) {
                        //window.location.href = 'javascript:history.go(-1)';
                        GoBack();
                    }
                });
            }
        })
    }

    function ReturnAdd() {
        $.ajax({
            url: "/api/CRM_CompanyFinance_Bill_AuditApi/ReturnAdd/@ViewBag.ID",
            type: "Post",
            //async: false,
            success: function (data) {
                $.messager.alert('操作提示', data.Message, 'info', function () {
                    if (data.Code == 1) {
                        //window.location.href = 'javascript:history.go(-1)';
                        GoBack();
                    }
                });
            }
        })
    }

    function GoBack() {
        var tmp = '@Request.QueryString["tmp"]';
        window.location.href = "/CRM/CRM_Company_Audit/Index/?tmp=" + tmp;
    }
</script>

<div id="divQuery">
    <div class='input_search' style="padding-top:10px;">
        @if (ViewBag.State == 1)
        {
            <input class="a2 f2" type="button" onclick="PassAdd()" value="通过" />
            <input class="a2 f2" type="button" onclick="ReturnAdd()" value="退回" />
        }
        <input class="a2 f2" type="button" onclick="GoBack()" value="返回列表" />

    </div>
</div>

<br style="clear: both;" />

<input type="hidden" id="ID" value="@ViewBag.ID" />
<input type="hidden" id="MainTableID" value="@ViewBag.MainTableID" />

<div class="p5">
    <table id="BasicGrid" style="width: auto; height: auto; border: 1px solid #ccc;">
        <thead>
            <tr>
                <th data-options="field:'BillName',width:200" align="center">开票名称</th>
                <th data-options="field:'TaxRegistryNumber',width:150" align="center">税务登记证号</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td align="center"><span id="Audit_BillName"></span></td>
                <td align="center"><span id="Audit_TaxRegistryNumber"></span></td>
            </tr>
        </tbody>
    </table>
</div>



