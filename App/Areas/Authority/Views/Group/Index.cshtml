    //编辑
    function edit() {

        var rows = $('#flexigridData').datagrid('getChecked');
        if (rows.length == 0) {
            alert('请选择数据!');
            //alertWarning("警告", "请选择数据", true, true);
            return;
        }
        else if (rows.length > 1) {
            alert('只能选择一条数据进行编辑!');
            //alertWarning("警告", "只能选择一条数据进行编辑", true, true);
            return;
        }
        else {
            var id = rows[0]["ID"];
            var name = rows[0]["GroupName"];
            Eidth(id, '修改' + name);
        }
    }


    function Delete() {

        var rows = $('#flexigridData').datagrid('getChecked');
        if (rows.length == 0) {
            alert('请选择数据!');
            //alertWarning("警告", "请选择数据", true, true);
            return;
        }
        else {
            var ids = '';

            for (var i = 0; i < rows.length; i++) {
                ids = ids + ',' + rows[i]["ID"];
            }


            $.ajax({
                type: "POST",
                url: "/api/GroupApi/Shanchu?IDs=" + ids,
                async: false,
                success: function (msg) {
                    if (msg.Code == 1) {
                        var roleName = $.trim($("#txtName").val());
                        var search = roleName;
                        alert(msg.Message);
                        $("#flexigridData").datagrid("load", {
                            search: search
                        });
                    }
                    else {

                        alert(msg.Message);
                    }
                }
            });

        }
    }

