                        var curRow = $("#tabselectUser tbody tr:eq(" + rows + ")");
                        $("#tabselectUser").append(tr);
                    }
                    else {//存在则在角色和名称进行追加
                        $("#tabselectUser tbody tr:eq(" + row + ") td:eq(1)").text(strUserNames);
                        $("#tabselectUser tbody tr:eq(" + row + ") td:eq(1)").attr("userid", strUserIDs);
                    }
                }
